@model List<Model.EF.Lession>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header
{
    Danh sách Lession
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-2">
                        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-md btn-success btn-block" })
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Lession Name</th>
                            <th>Language ID</th>
                            <th>Status</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@item.LessionId</td>
                                <td>@item.NameLession</td>
                                <td>@item.LanguageId</td>
                                <td style="text-align:center">
                                    @if (@item.Status == true)
                                    {
                                        <span class="label label-success">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="label label-warning">Vô hiệu hóa</span>
                                    }
                                </td>
                                <td class="center" style="text-align:center">
                                    <span>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.LessionId }, new { @class = "btn btn-md btn-primary" })
                                    </span>
                                </td>
                                <td class="center" style="text-align:center">
                                    <!--@Html.ActionLink("Delete", "Delete", new { id = item.LessionId }, new { @class = "btn btn-md btn-danger btn-block delete-link" })-->
                                    <a class="delete-link btn btn-md btn-danger" onclick="my_function()" data-id="@item.LessionId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
